                                    </div>
                                    <div class="product-info">
                                        <h4 class="product-title"><a href="./products.php?id=<?= $prod['Id'] ?>"><?= substr($prod['Titre'],0,20); ?>...</a></h4>
                                        <span class="product-price"><?= $prod['Prix'] ?>â‚¬</span>
                                       
                                    </div>
                                </div>
                            </div>
                            <?php endforeach; ?>
